%h1 Wszystkie dni

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @days.each do |day|
      %tr
        %td= link_to 'Show', day
        %td= link_to 'Edit', edit_day_path(day)
        %td= link_to 'Destroy', day, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
.well
  =simple_form_for @day, html:{class: "form-inline"} do |d|
    .form-group
      .input-group
        = d.label "Data: "
        = d.input :date, :as => :date_picker, label: false
        = d.simple_fields_for blueberry do |b|
          =b.label "Borówka: "
          =b.input :kg, label: false
          .input-group-addon
            %em kurs:
            %br
            1.0
        = d.simple_fields_for raspberry do |b|
          =b.label "Malina: "
          =b.input :kg, label: false
          .input-group-addon
            %em kurs:
            %br
            1.0
        = d.simple_fields_for blackberry do |b|
          =b.label "Jeżyna: "
          =b.input :kg, label: false
          .input-group-addon
            %em kurs:
            %br
            1.0
        = d.simple_fields_for hour do |b|
          =b.label "Godziny:"
          =b.input :amount, label: false
          .input-group-addon
            %em kurs:
            %br
            5.0

    = d.button :button, class: "btn btn-success" do
      Dodaj
= link_to 'Dodaj dniówke', new_day_path, class: "btn btn-info btn", role: "button"