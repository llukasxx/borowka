.row
  .col-md-6.col-md-offset-3
    .panel.panel-warning
      .panel-heading
        %h3.panel-title.bolder.text-center Wypłata
      .panel-body
        %h3.text-center= "#{current_user.firstname} #{current_user.lastname}"
        %h4.text-center= "#{current_user.days.first.date.strftime("%d/%m/%Y")} - #{current_user.days.last.date.strftime("%d/%m/%Y")}"
        %h4.text-center= "Borówka= ilość: #{current_user.blueberry_amount} kg, wartość: #{current_user.blueberry_value}"
        %h4.text-center= "Malina= ilość: #{current_user.raspberry_amount} kg, wartość: #{current_user.raspberry_value}"
        %h4.text-center= "Jeżyna= ilość: #{current_user.blackberry_amount} kg, wartość: #{current_user.blackberry_value}"
        %h4.text-center= "Godziny= ilość: #{current_user.hour_amount}h, wartość: #{current_user.hour_value}"
        %h4.text-center= "Dni= ilość: #{current_user.days.count}, wartość: #{current_user.day_value}"
        %h4.text-center= "Suma: #{current_user.all_earnings}"
      
